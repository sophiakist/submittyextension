{
  "name": "submittyextension",
  "displayName": "SubmittyExtension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Submitty Grader",
        "properties": {
          "submitty.grade": {
            "title": "Grade",
            "type": "string",
            "description": "The grade to assign to the student's submission."
          }
        }
        }
      ],
    "commands": [
      {
        "command": "submitty.setUserId",
        "title": "Set Submitty User ID"
      },
      {
        "command": "submitty.setPassword",
        "title": "Set Submitty Password"
      },
      {
        "command": "submitty.login",
        "title": "Log in to Submitty"
      },
      {
        "command": "submitty.grade",
        "title": "Grade",
        "icon": "$(check)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "submittySidebar",
          "title": "Submitty",
          "icon": "media/duck.png"
        }
      ],
      "panel": [
        {
          "id": "submitty-panel-view",
          "title": "Submitty",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
    "submittySidebar": [
      {
        "type": "webview",
        "id": "submittyWebview",
        "name": "Submitty Login"
      }
    ],
    "submitty-panel-view": [
      {
        "type": "webview",
        "id": "submitty-panel",
        "name": "Submitty",
        "contextualTitle": "Submitty"
      }
    ]
  },
  "menus": {
    "editor/title": [
      {
        "command": "submitty.grade",
        "when": "editorTextFocus",
        "group": "navigation"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.8"
  }
  }
}
